extends ../../layout/private/manage.layout.pug

block content
  .content-wrapper
    // Content Header (Page header)
    section.content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1 User management
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='#') Home
              li.breadcrumb-item.active User
      // /.container-fluid
    // Main content
    section.content
      .container-fluid
        .row
          .col-12
            .card
              .card-header
                h3.card-title User in system
              // /.card-header
              .card-body
                table#example2.table.table-bordered.table-hover
                  thead
                    tr
                      th Id
                      th Username
                      th Full name
                      th status
                      th roles
                  tbody#user-table
                  tfoot
                    tr
                      th Rendering engine
                      th Browser
                      th Platform(s)
                      th Engine version
                      th CSS grade
              // /.card-body
          // /.col
        // /.row
      // /.container-fluid
    // /.content

block scripts
    script.
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    script(src="dist/js/pages/user.js") 